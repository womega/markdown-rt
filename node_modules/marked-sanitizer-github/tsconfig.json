{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": false,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "target": "es2015",
    "sourceMap": true
  },
  "files": [
    "index.ts",
    "test/integ.ts",
    "test/sanitize.ts",
    "test/invalid.ts",
    "test/reset.ts",
    "test/void_elements.ts",
    "test/comments.ts"
  ]
}
